@page
@model CoreRazorPage.Pages.BookList.IndexModel
@{
}
<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-3">
        <a asp-page="/BookList/Create" class="btn btn-info form-control text-white">Create New Book</a>
    </div>
    <div class="col-12 p-3 m-3">
        <form method="post">
            @if (Model.Books.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Books.FirstOrDefault().Name"> </label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().Author"> </label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().ISBN"> </label>
                        </th>
                        <th>

                        </th>

                    </tr>
                    @foreach (var item in Model.Books)
                    {
                        <tr class="col-12">
                            <td class="col-3">
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td class="col-3">
                                @Html.DisplayFor(m => item.Author)
                            </td>
                            <td class="col-3">
                                @Html.DisplayFor(m => item.ISBN)
                            </td>
                            <td class="col-3">
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to Delete?')" class="btn btn-danger btn-sm">Delete</button>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">Edit</a>
                            </td>
                        </tr>

                    }
                </table>
            }
            else
            {
                <p>No books available </p>
            }
        </form>
    </div>

    <br />
    <h2>Web API Table</h2>
    <div class="col-12 p-3 m-3">
        <table id="dt_load" class="table table-striped border">
            <thead>
                <tr class="table-secondary">
                    <th>
                        <label>Name </label>
                    </th>
                    <th>
                        <label> Author</label>
                    </th>
                    <th>
                        <label> ISBN</label>
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/booklist.js"></script>
}