@page
@model CoreRazorPage.Pages.Auth.LoginModel
@{
}
<h1>Login</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="UserViewModel.Email" class="control-label"></label>
                <input asp-for="UserViewModel.Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="UserViewModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserViewModel.Password" class="control-label"></label>
                <input asp-for="UserViewModel.Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="UserViewModel.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}